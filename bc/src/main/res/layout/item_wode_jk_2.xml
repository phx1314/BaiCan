<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:paddingLeft="@dimen/j20dp">

    <TextView
        android:id="@+id/mTextView_zhou"
        style="@style/text_style_13_gray"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="30å‘¨" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="@dimen/j110dp"
        android:layout_marginLeft="@dimen/j10dp"
        android:layout_marginRight="@dimen/j10dp"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/mImageView_top"
            android:layout_width="1px"
            android:layout_height="@dimen/j30dp"
            android:background="@color/tyD1" />

        <ImageView
            android:layout_width="1px"
            android:layout_height="@dimen/j30dp"
            android:background="@color/tyD1" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/bj" />

        <ImageView
            android:layout_width="1px"
            android:layout_height="@dimen/j30dp"
            android:background="@color/tyD1" />

        <ImageView
            android:id="@+id/mImageView_bottom"
            android:layout_width="1px"
            android:layout_height="@dimen/j30dp"
            android:background="@color/tyD1" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/mTextView_price"
            style="@style/text_style_15_gray"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="105151564.00"
            android:textColor="@color/A" />

        <TextView
            android:id="@+id/mTextView_time"
            style="@style/text_style_13_gray"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/j5dp"
            android:text="2017-08-05" />
    </LinearLayout>
</LinearLayout>

