<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/A2"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/j330dp"
                android:background="@drawable/repaymentbg"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/mTextView_time"
                    style="@style/text_style_13_white"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/j20dp"
                    android:text="5月28号"
                    android:visibility="gone" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/j220dp">

                    <com.ntdlg.bc.view.MViewOne
                        android:id="@+id/mMViewOne"
                        android:layout_width="@dimen/j220dp"
                        android:layout_height="@dimen/j220dp"
                        android:layout_centerHorizontal="true" />

                    <TextView
                        android:id="@+id/mTextView_mx"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="@dimen/j45dp"
                        android:background="@drawable/test_mx"
                        android:visibility="invisible" />

                    <TextView
                        android:id="@+id/mTextView_price"
                        style="@style/text_style_17_white"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/mTextView_mx"
                        android:layout_centerHorizontal="true"
                        android:text="20000"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/mTextView_ws_1"
                        style="@style/text_style_13_gray"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/mTextView_price"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="@dimen/j5dp"
                        android:text="本期应还款金额(元)" />

                    <TextView
                        android:id="@+id/mTextView_qsh"
                        style="@style/text_style_15_gray"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/mTextView_ws_1"
                        android:layout_marginTop="@dimen/j15dp"
                        android:gravity="center_horizontal" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center_horizontal"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/mTextView_price1"
                                style="@style/text_style_15_white"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/j5dp"
                                android:text="100.00" />

                            <TextView
                                android:id="@+id/mTextView_ws_2"
                                style="@style/text_style_11_gray"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/j5dp"
                                android:text="逾期未还金额(元)" />

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/j5dp"
                                android:src="@drawable/bj" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center_horizontal"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/mTextView_price2"
                                style="@style/text_style_15_white"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/j5dp"
                                android:text="100.00" />

                            <TextView
                                android:id="@+id/mTextView_ws_3"
                                style="@style/text_style_11_gray"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/j5dp"
                                android:text="罚息金额(元)" />

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/j5dp"
                                android:src="@drawable/lx" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center_horizontal"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/mTextView_price3"
                                style="@style/text_style_15_white"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/j5dp"
                                android:text="100.00" />

                            <TextView
                                android:id="@+id/mTextView_ws_4"
                                style="@style/text_style_11_gray"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/j5dp"
                                android:text="本期应还本息(元)" />

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/j5dp"
                                android:src="@drawable/sxf" />
                        </LinearLayout>
                    </LinearLayout>
                </RelativeLayout>

                <TextView
                    android:id="@+id/mTextView_time_last"
                    style="@style/text_style_11_gray"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/j10dp"
                    android:gravity="center_horizontal"
                    android:text="最后还款日2017-05-05" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#ffffff"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/mTextView_xianxia"
                    android:visibility="gone"
                    style="@style/text_style_13_gray"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/j20dp"
                    android:gravity="center_horizontal"
                    android:text="9566工商银行卡余额不足？尝试线下还款" />

                <TextView
                    android:id="@+id/mTextView_shenqing"
                    style="@style/text_style_15_white"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/j20dp"
                    android:layout_marginRight="@dimen/j20dp"
                    android:layout_marginTop="@dimen/j10dp"
                    android:background="@drawable/shape_green"
                    android:gravity="center"
                    android:padding="@dimen/j8dp"
                    android:text="立即还款" />

                <TextView
                    android:id="@+id/mTextView_remark"
                    style="@style/text_style_13_gray"
                    android:layout_width="@dimen/j280dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/j10dp"
                    android:gravity="center_horizontal"
                    android:text="最后还款日当天系统将通过您的还款银行卡自动扣款请保持银行卡余额充足" />

                <LinearLayout
                    android:id="@+id/mLinearLayout_bottom"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/j10dp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/mTextView_all_price"
                            style="@style/text_style_15_black"
                            android:layout_width="@dimen/j280dp"
                            android:layout_height="wrap_content"
                            android:gravity="center_horizontal"
                         />

                        <TextView
                            style="@style/text_style_13_gray"
                            android:layout_width="@dimen/j280dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/j5dp"
                            android:gravity="center_horizontal"
                            android:text="借款总额(元)" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/mTextView_wh_price"
                            style="@style/text_style_15_black"
                            android:layout_width="@dimen/j280dp"
                            android:layout_height="wrap_content"
                            android:gravity="center_horizontal"
                             />

                        <TextView
                            style="@style/text_style_13_gray"
                            android:layout_width="@dimen/j280dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/j5dp"
                            android:gravity="center_horizontal"
                            android:text="未还本金(元)" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>

