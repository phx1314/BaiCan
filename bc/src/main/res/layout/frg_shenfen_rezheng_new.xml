<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#ffffff"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <TextView
                    style="@style/text_style_11_gray"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/j10dp"
                    android:layout_marginRight="@dimen/j10dp"
                    android:layout_marginTop="@dimen/j20dp"
                    android:gravity="center"
                    android:text="认证需要提供本人身份证照片信息，请使用摄像头扫描识别" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/j6dp"
                    android:orientation="horizontal"
                    android:padding="@dimen/j10dp">

                    <com.mdx.framework.widget.MImageView
                        android:id="@+id/mMImageView_2"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/j90dp"
                        android:layout_weight="1"
                        android:background="@drawable/backid"
                        android:scaleType="centerCrop" />

                    <com.mdx.framework.widget.MImageView
                        android:id="@+id/mMImageView_1"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/j90dp"
                        android:layout_marginLeft="@dimen/j9dp"
                        android:layout_weight="1"
                        android:background="@drawable/positiveid"
                        android:scaleType="centerCrop" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingBottom="@dimen/j10dp">

                    <TextView
                        style="@style/text_style_15_black"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="身份证国徽面" />

                    <TextView
                        style="@style/text_style_15_black"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="身份证人像面" />
                </LinearLayout>

                <com.mdx.framework.widget.MImageView
                    android:id="@+id/mMImageView_add"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/j15dp"
                    android:background="@drawable/backid" />

                <TextView
                    style="@style/text_style_15_black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/j15dp"
                    android:gravity="center"
                    android:text="手持身份证照片" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/j15dp"
                    android:background="#f2f2f2"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/mTextView_shenqing"
                        style="@style/text_style_15_white"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/j20dp"
                        android:layout_marginLeft="@dimen/j15dp"
                        android:layout_marginRight="@dimen/j15dp"
                        android:layout_marginTop="@dimen/j30dp"
                        android:background="@drawable/shape_green"
                        android:gravity="center"
                        android:padding="@dimen/j8dp"
                        android:text="提交" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>

