<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F4F4F4"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#F4F4F4"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/j380dp"
                android:background="@drawable/mybg"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="44dip"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/clk_mTextView_hd"
                        style="@style/text_style_15_white"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:paddingLeft="@dimen/j10dp"
                        android:paddingRight="@dimen/j10dp"
                        android:text="活动" />

                    <TextView
                        style="@style/text_style_17_white"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:text="首页" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/mLinearLayout_yuan"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/j120dp"
                    android:layout_marginTop="@dimen/j10dp"
                    android:gravity="center"
                    android:orientation="vertical">

                    <com.ntdlg.bc.view.MViewOne
                        android:id="@+id/mMViewOne"
                        android:layout_width="@dimen/j120dp"
                        android:layout_height="@dimen/j120dp"
                        android:layout_centerHorizontal="true" />

                    <TextView
                        android:id="@+id/mTextView_num"
                        style="@style/text_style_17_white"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="@dimen/j30dp"
                        android:text="2000"
                        android:textSize="25sp" />

                    <TextView
                        style="@style/text_style_13_white"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/mTextView_num"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="@dimen/j5dp"
                        android:text="申请金额(元)" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_marginBottom="@dimen/j15dp">

                        <TextView
                            android:id="@+id/mTextView_left"
                            style="@style/text_style_13_white"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignLeft="@+id/mSeekBar"
                            android:text="2000" />

                        <ImageView
                            android:id="@+id/mImageView_del_top"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_below="@+id/mTextView_left"
                            android:paddingLeft="@dimen/j8dp"
                            android:paddingRight="@dimen/j8dp"
                            android:src="@drawable/ic_remove_black_24dp" />

                        <SeekBar
                            android:id="@+id/mSeekBar"
                            style="@style/Widget.SeekBar.Normal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/mTextView_left"
                            android:layout_marginLeft="@dimen/j30dp"
                            android:layout_marginRight="@dimen/j30dp"
                            android:max="8000"
                            android:splitTrack="false" />

                        <ImageView
                            android:id="@+id/mImageView_add_top"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_below="@+id/mTextView_left"
                            android:paddingLeft="@dimen/j8dp"
                            android:paddingRight="@dimen/j8dp"
                            android:src="@drawable/ic_add_black_24dp" />

                        <TextView
                            android:id="@+id/mTextView_right"
                            style="@style/text_style_13_white"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignRight="@+id/mSeekBar"
                            android:splitTrack="false"
                            android:text="10000" />
                    </RelativeLayout>
                </RelativeLayout>

                <TextView
                    android:id="@+id/mTextView_zhou"
                    style="@style/text_style_17_white"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="10" />

                <TextView
                    style="@style/text_style_13_white"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/j3dp"
                    android:text="借款周期(周)" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/mTextView_left_zhou"
                        style="@style/text_style_13_white"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignLeft="@+id/mSeekBar_zhou"
                        android:layout_marginLeft="@dimen/j7dp"
                        android:text="10" />

                    <ImageView
                        android:id="@+id/mImageView_del"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_below="@+id/mTextView_left_zhou"
                        android:paddingLeft="@dimen/j8dp"
                        android:paddingRight="@dimen/j8dp"
                        android:src="@drawable/ic_remove_black_24dp" />

                    <SeekBar
                        android:id="@+id/mSeekBar_zhou"
                        style="@style/Widget.SeekBar.Normal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/mTextView_left_zhou"
                        android:layout_marginLeft="@dimen/j30dp"
                        android:layout_marginRight="@dimen/j30dp"
                        android:max="20"
                        android:splitTrack="false" />

                    <ImageView
                        android:id="@+id/mImageView_add"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_below="@+id/mTextView_left_zhou"
                        android:paddingLeft="@dimen/j8dp"
                        android:paddingRight="@dimen/j8dp"
                        android:src="@drawable/ic_add_black_24dp" />

                    <TextView
                        android:id="@+id/mTextView_zhong"
                        style="@style/text_style_13_white"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:text="20"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/mTextView_right_zhou"
                        style="@style/text_style_13_white"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignRight="@+id/mSeekBar_zhou"
                        android:layout_marginRight="@dimen/j7dp"
                        android:text="30" />

                    <ImageView
                        android:id="@+id/mImageView_left"
                        android:layout_width="@dimen/j25dp"
                        android:layout_height="@dimen/j10dp"
                        android:layout_alignLeft="@+id/mSeekBar_zhou"
                        android:layout_marginLeft="@dimen/j13dp"
                        android:layout_marginTop="@dimen/j17dp"
                        android:background="#00ffffff" />

                    <ImageView
                        android:id="@+id/mImageView_right"
                        android:layout_width="@dimen/j25dp"
                        android:layout_height="@dimen/j10dp"
                        android:layout_alignRight="@+id/mTextView_right_zhou"
                        android:layout_marginRight="@dimen/j7dp"
                        android:layout_marginTop="@dimen/j17dp"
                        android:background="#00ffffff" />

                    <ImageView
                        android:id="@+id/mImageView_center"
                        android:layout_width="@dimen/j25dp"
                        android:layout_height="@dimen/j10dp"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="@dimen/j17dp"
                        android:background="#00ffffff" />
                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/j15dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:visibility="gone">

                        <TextView
                            android:id="@+id/mTextView_b1"
                            style="@style/text_style_15_white"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                        <TextView
                            style="@style/text_style_13_white"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/j5dp"
                            android:text="借款利率(天)" />
                    </LinearLayout>

                    <ImageView
                        android:layout_width="1px"
                        android:layout_height="@dimen/j25dp"
                        android:background="#ffffff"
                        android:visibility="gone" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:visibility="gone"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/mTextView_b2"
                            style="@style/text_style_15_white"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                        <TextView
                            style="@style/text_style_13_white"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/j5dp"
                            android:text="还款金额(元)/周" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/j10dp"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/mTextView_shenqing"
                    style="@style/text_style_15_white"
                    android:layout_width="@dimen/j280dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/shape_green_shouye"
                    android:editable="false"
                    android:gravity="center"
                    android:padding="@dimen/j10dp"
                    android:text="快速申请贷款" />

                <TextView
                    android:id="@+id/mTextView_xinshou"
                    style="@style/text_style_15_white"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/j5dp"
                    android:layout_marginTop="@dimen/j10dp"
                    android:gravity="center"
                    android:text="新手指引?"
                    android:textColor="@color/A" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>

