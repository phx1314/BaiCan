<?xml version="1.0" encoding="UTF-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f2f2f2"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/mLinearLayout_top"
        android:layout_width="match_parent"
        android:layout_height="@dimen/j220dp"
        android:layout_margin="@dimen/j10dp"
        android:background="@drawable/shape_white"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:paddingTop="@dimen/j60dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawablePadding="@dimen/j10dp"
            android:drawableTop="@drawable/inaudit"
            android:gravity="center"
            android:text="审核中..."
            android:textColor="@color/A"
            android:textSize="18sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/j15dp"
            android:gravity="center"
            android:text="@string/gx" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/mLinearLayout_top"
        android:layout_marginBottom="@dimen/j10dp"
        android:layout_marginLeft="@dimen/j10dp"
        android:layout_marginRight="@dimen/j10dp"
        android:background="@drawable/shape_white"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/j20dp"
        android:paddingLeft="@dimen/j50dp"
        android:paddingTop="@dimen/j20dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/inauditicon" />

            <ImageView
                android:layout_width="1px"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/tyD1" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/inauditicon"
                android:visibility="gone" />

            <ImageView
                android:layout_width="1px"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/tyD1"
                android:visibility="gone" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/inauditicon" />

            <ImageView
                android:layout_width="1px"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/tyD1" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/inauditicon" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/j15dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    style="@style/text_style_13_gray"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="申请借款金额" />

                <TextView
                    android:id="@+id/mTextView_price"
                    style="@style/text_style_15_black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/j15dp" />
            </LinearLayout>

            <ImageView
                android:layout_width="1px"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    style="@style/text_style_13_gray"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="申请借款期限" />

                <TextView
                    android:id="@+id/mTextView_qx"
                    style="@style/text_style_15_black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/j15dp" />
            </LinearLayout>

            <ImageView
                android:layout_width="1px"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:visibility="gone" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:visibility="gone">

                <TextView
                    style="@style/text_style_13_gray"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="申请借款费率" />

                <TextView
                    android:id="@+id/mTextView_fl"
                    style="@style/text_style_15_black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/j15dp" />
            </LinearLayout>

            <ImageView
                android:layout_width="1px"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    style="@style/text_style_13_gray"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="申请还款金额" />

                <TextView
                    android:id="@+id/mTextView_hk"
                    style="@style/text_style_15_black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/j15dp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/j60dp"
        android:background="@drawable/signbg" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="44dip">

        <ImageButton
            android:id="@+id/btn_left"
            style="@style/text_style_15_white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:background="#00000000"
            android:drawablePadding="@dimen/j3dp"
            android:gravity="center"
            android:padding="@dimen/j10dp"
            android:src="@drawable/arrows_left" />

        <TextView
            android:id="@+id/tv_title"
            style="@style/text_style_17_white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginLeft="@dimen/j50dp"
            android:layout_marginRight="@dimen/j50dp"
            android:drawablePadding="@dimen/j2dp"
            android:ellipsize="end"
            android:gravity="center"
            android:singleLine="true"
            android:text="授信额度" />
    </RelativeLayout>
</RelativeLayout>

