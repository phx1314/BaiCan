<?xml version="1.0" encoding="UTF-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f2f2f2"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="@dimen/j10dp">

            <LinearLayout
                android:id="@+id/mLinearLayout_top"
                android:layout_width="match_parent"
                android:layout_height="@dimen/j220dp"
                android:background="@drawable/shape_white"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <RelativeLayout
                    android:id="@+id/mRelativeLayout_top"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/j10dp">

                    <ImageView
                        android:id="@+id/mMViewOne"
                        android:layout_width="@dimen/j150dp"
                        android:layout_height="@dimen/j100dp"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="@dimen/j10dp"
                        android:background="@drawable/yuan_lan_2" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/j45dp"
                            android:text="授信额度(元)"
                            android:textColor="@color/A"
                            android:textSize="13sp" />

                        <TextView
                            android:id="@+id/mTextView_ed"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/j10dp"
                            android:text="10000000.00"
                            android:textColor="@color/A"
                            android:textSize="18sp" />

                        <TextView
                            android:id="@+id/mTextView_time"
                            style="@style/text_style_13_gray"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/j20dp"
                            android:text="签约倒计时 4天23：00：00" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/j15dp"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/mImageView_jihao"
                                android:layout_width="@dimen/j20dp"
                                android:layout_height="@dimen/j20dp"
                                android:src="@drawable/complete" />

                            <TextView
                                android:id="@+id/mTextView_tg"
                                style="@style/text_style_15_gray"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/j5dp"
                                android:gravity="center_vertical"
                                android:text="审核通过" />
                        </LinearLayout>

                        <TextView
                            android:id="@+id/mTextView_remark"
                            style="@style/text_style_13_gray"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/j10dp"
                            android:text="恭喜您，您的借款申请已审核通过" />
                    </LinearLayout>
                </RelativeLayout>

                <LinearLayout
                    android:id="@+id/mLinearLayout_shz"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/j40dp"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/mTextView_shz"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawablePadding="@dimen/j10dp"
                        android:drawableTop="@drawable/inaudit"
                        android:gravity="center"
                        android:text="审核中..."
                        android:textColor="@color/A"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/mTextView_remark1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/j15dp"
                        android:gravity="center"
                        android:lineSpacingExtra="@dimen/j5dp"
                        android:text="@string/gx" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/j10dp"
                android:background="@drawable/shape_white"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:paddingBottom="@dimen/j10dp"
                android:paddingTop="@dimen/j20dp">

                <LinearLayout
                    android:id="@+id/mLinearLayout_center"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/j150dp"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:orientation="horizontal"
                    android:paddingLeft="@dimen/j40dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center_horizontal"
                        android:orientation="vertical"
                        android:paddingBottom="@dimen/j20dp">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/inauditicon" />

                        <ImageView
                            android:layout_width="1px"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="@color/tyD1" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/inauditicon" />

                        <ImageView
                            android:layout_width="1px"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="@color/tyD1" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/inauditicon" />

                        <ImageView
                            android:layout_width="1px"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="@color/tyD1" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/inauditicon" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/j15dp"
                        android:orientation="vertical"
                        android:paddingBottom="@dimen/j20dp">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <TextView
                                style="@style/text_style_13_gray"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="审批借款金额" />

                            <TextView
                                android:id="@+id/mTextView_price"
                                style="@style/text_style_15_black"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/j15dp" />
                        </LinearLayout>

                        <ImageView
                            android:layout_width="1px"
                            android:layout_height="wrap_content"
                            android:layout_weight="1" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <TextView
                                style="@style/text_style_13_gray"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="审批借款期限" />

                            <TextView
                                android:id="@+id/mTextView_qx"
                                style="@style/text_style_15_black"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/j15dp" />
                        </LinearLayout>

                        <ImageView
                            android:layout_width="1px"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:visibility="gone" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:orientation="horizontal"
                            android:visibility="gone">

                            <TextView
                                style="@style/text_style_13_gray"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="审批借款费率" />

                            <TextView
                                android:id="@+id/mTextView_fl"
                                style="@style/text_style_15_black"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/j15dp" />
                        </LinearLayout>

                        <ImageView
                            android:layout_width="1px"
                            android:layout_height="wrap_content"
                            android:layout_weight="1" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <TextView
                                style="@style/text_style_13_gray"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="审批还款金额" />

                            <TextView
                                android:id="@+id/mTextView_hk"
                                style="@style/text_style_15_black"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/j15dp" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/mLinearLayout_bottom"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingLeft="@dimen/j10dp"
                    android:paddingRight="@dimen/j10dp">

                    <TextView
                        android:id="@+id/mTextView_left"
                        style="@style/text_style_15_black"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/j20dp"
                        android:layout_weight="1"
                        android:background="@drawable/shape_green_kong"
                        android:gravity="center"
                        android:padding="@dimen/j10dp"
                        android:text="提额认证" />

                    <TextView
                        android:id="@+id/mTextView_right"
                        style="@style/text_style_15_white"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/shape_green"
                        android:gravity="center"
                        android:padding="@dimen/j10dp"
                        android:text="开始借款" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/j75dp"
        android:background="@drawable/signbg"
        android:visibility="gone" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="44dip"
        android:visibility="gone">

        <ImageButton
            android:id="@+id/btn_left"
            style="@style/text_style_15_white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:background="#00000000"
            android:drawablePadding="@dimen/j3dp"
            android:gravity="center"
            android:padding="@dimen/j10dp"
            android:src="@drawable/arrows_left" />

        <TextView
            android:id="@+id/tv_title"
            style="@style/text_style_17_white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginLeft="@dimen/j50dp"
            android:layout_marginRight="@dimen/j50dp"
            android:drawablePadding="@dimen/j2dp"
            android:ellipsize="end"
            android:gravity="center"
            android:singleLine="true"
            android:text="授信额度" />
    </RelativeLayout>
</RelativeLayout>

