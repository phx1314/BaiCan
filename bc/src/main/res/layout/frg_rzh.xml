<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f2f2f2"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="44dip"
                android:background="@color/A"
                android:orientation="horizontal">

                <TextView
                    style="@style/text_style_17_white"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="认证" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/j160dp"
                android:layout_margin="@dimen/j10dp"
                android:background="@drawable/shape_white"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/j20dp"
                    android:text="- 基本认证 -"
                    android:textColor="@color/A"
                    android:textSize="17sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/j5dp"
                    android:layout_marginRight="@dimen/j5dp"
                    android:layout_marginTop="@dimen/j40dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/mImageView_1"
                        style="@style/text_style_15_gray"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawablePadding="@dimen/j10dp"
                        android:drawableTop="@drawable/personal1"
                        android:gravity="center"
                        android:text="个人资料" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="1px"
                        android:layout_marginTop="@dimen/j15dp"
                        android:layout_weight="1"
                        android:background="@color/tyD1" />

                    <TextView
                        android:id="@+id/mImageView_2"
                        style="@style/text_style_15_gray"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawablePadding="@dimen/j10dp"
                        android:drawableTop="@drawable/phone2"
                        android:gravity="center"
                        android:text="手机认证" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="1px"
                        android:layout_marginTop="@dimen/j15dp"
                        android:layout_weight="1"
                        android:background="@color/tyD1" />

                    <TextView
                        android:id="@+id/mImageView_3"
                        style="@style/text_style_15_gray"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawablePadding="@dimen/j10dp"
                        android:drawableTop="@drawable/identity3"
                        android:gravity="center"
                        android:text="身份认证" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="1px"
                        android:layout_marginTop="@dimen/j15dp"
                        android:layout_weight="1"
                        android:background="@color/tyD1" />

                    <TextView
                        android:id="@+id/mImageView_4"
                        style="@style/text_style_15_gray"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawablePadding="@dimen/j10dp"
                        android:drawableTop="@drawable/bankcard4"
                        android:gravity="center"
                        android:text="电商" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/j160dp"
                android:layout_margin="@dimen/j10dp"
                android:background="@drawable/shape_white"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/j20dp"
                    android:text="- 提额增信 -"
                    android:textColor="@color/A"
                    android:textSize="17sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/j5dp"
                    android:layout_marginRight="@dimen/j5dp"
                    android:layout_marginTop="@dimen/j40dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/mImageView_te_1"
                        style="@style/text_style_15_gray"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawablePadding="@dimen/j10dp"
                        android:drawableTop="@drawable/bankcard4"
                        android:gravity="center"
                        android:text="电商" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="1px"
                        android:layout_marginTop="@dimen/j15dp"
                        android:layout_weight="1" />

                    <TextView
                        android:id="@+id/mImageView_te_2"
                        style="@style/text_style_15_gray"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawablePadding="@dimen/j10dp"
                        android:drawableTop="@drawable/authentication2"
                        android:gravity="center"
                        android:text="公积金/社保" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="1px"
                        android:layout_marginTop="@dimen/j15dp"
                        android:layout_weight="1" />

                    <TextView
                        android:id="@+id/mImageView_te_3"
                        style="@style/text_style_15_gray"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawablePadding="@dimen/j10dp"
                        android:drawableTop="@drawable/authentication3"
                        android:gravity="center"
                        android:text="美团/饿了么"
                      />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="1px"
                        android:layout_marginTop="@dimen/j15dp"
                        android:layout_weight="1"
                        android:visibility="invisible" />

                    <TextView
                        android:id="@+id/mImageView_te_4"
                        style="@style/text_style_15_gray"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawablePadding="@dimen/j10dp"
                        android:drawableTop="@drawable/authentication4"
                        android:gravity="center"
                        android:text="账单认证"
                        android:visibility="invisible" />
                </LinearLayout>
            </LinearLayout>

            <TextView
                style="@style/text_style_15_gray"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/j10dp"
                android:text="填写本人真实有效信息可快速提升审核额度" />

            <TextView
                android:id="@+id/mTextView_shenqing"
                style="@style/text_style_15_white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/j40dp"
                android:layout_marginRight="@dimen/j40dp"
                android:layout_marginTop="@dimen/j10dp"
                android:background="@drawable/shape_green"
                android:gravity="center"
                android:padding="@dimen/j8dp"
                android:text="马上认证"
                android:visibility="gone" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>

